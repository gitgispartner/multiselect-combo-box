{
  "extends": "vaadin",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": ["html"],
  "globals": {
    "Polymer": false,
    "Vaadin": false,
    "MultiselectComboBoxMixin": false
  },
  "rules": {
    "linebreak-style": ["error", "windows"],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ]
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
